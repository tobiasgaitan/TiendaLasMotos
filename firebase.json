{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "functions"
    },
    "hosting": [
        {
            "target": "tiendalasmotos",
            "source": ".",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**",
                "package-lock.json"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "frameworksBackend": {
                "region": "us-central1"
            }
        }
    ]
}