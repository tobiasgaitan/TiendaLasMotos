rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Public Read-Only for Catalog
    match /pagina/catalogo/items/{item} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Leads: Admin Only (Auth Required)
    match /leads/{lead} {
      allow read, write: if request.auth != null;
    }
  }
}
