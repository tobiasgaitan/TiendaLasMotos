rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Public Read-Only for Catalog
    match /pagina/catalogo/items/{item} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Leads: Admin Only (Auth Required)
    match /leads/{lead} {
      allow read, write: if request.auth != null;
    }

    // Prospectos: Public create, Admin/Auth read/update/delete
    match /prospectos/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }



    // System Admins: Read-only for authenticated users to verify role
    match /sys_admin_users/{document} {
      allow read: if request.auth != null;
    }

    // Legacy Panel Access (Restored for panel.tiendalasmotos.com)
    match /usuarios/{document=**} {
      allow read: if request.auth != null;
    }
    match /sedes/{document=**} {
      allow read: if request.auth != null;
    }
    match /sucursales/{document=**} {
      allow read: if request.auth != null;
    }
    match /imported_tables/{document=**} {
      allow read: if request.auth != null;
    }
  }
}
